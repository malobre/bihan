{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "useEditorconfig": true
  },
  "linter": {
    "domains": {
      "project": "recommended"
    },
    "rules": {
      "suspicious": {
        "noExplicitAny": "error"
      },
      "correctness": {
        "useImportExtensions": "error"
      }
    }
  }
}
